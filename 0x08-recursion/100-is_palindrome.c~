#include <stdio.h>
#include  <string.h>
#include "main.h"
int helper(int n,int i); 

int is_palindrome(char *s) 
{
return (helper(s,i));
}
int helper(int *s, int i)
{
	int len = strlen(s);
	if (len == 0 || len == 1)
        {
            	   return (1);
        }
        if ((s[0]) == (s[len - 1]))
        {
                return (is_palindrome((s + 1) && len - 2));
        }
        return (0);	
}
